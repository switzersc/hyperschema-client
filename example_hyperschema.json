{
    "$id": "https://schema.example.com/thing",
    "$schema": "http://json-schema.org/draft-07/hyper-schema#",
    "type": "object",
    "required": ["data"],
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 1,
            "readOnly": true
        },
        "data": true
    },
    "links": [
        {
            "rel": "self",
            "href": "https://api.example.com/things/{id}"
        },
        {
            "rel": "author",
            "href": "https://api.example.com/author"
        }
    ]
}
